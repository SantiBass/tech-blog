
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
        {{>dashboard-postinfo post}}
    {{/each}}
  </ol>
</section>
{{/if}}
<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ New Post</a></button>
<script src="/public/javascript/adding-post.js"></script> 